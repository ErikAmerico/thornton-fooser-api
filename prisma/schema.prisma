generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Player {
  id    String @id @default(cuid())
  name  String @unique
  score Float  @default(0)
  championships Int @default(0)  
}

model Tournament {
  id         Int             @id @default(autoincrement())
  createdAt  DateTime        @default(now())
  teams      Json
  results    Json            
}